{
  "name": "rpg-tools",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/rpg-tools",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/rpg-tools"],
      "options": {
        "command": "nuxt generate && mkdir -p ../../dist/apps/rpg-tools && cp -R .output/public/. ../../dist/apps/rpg-tools/",
        "cwd": "apps/rpg-tools"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nuxt dev --port 3003 --host 127.0.0.1",
        "cwd": "apps/rpg-tools"
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nuxt preview",
        "cwd": "apps/rpg-tools"
      }
    },
    "prepare": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nuxi prepare",
        "cwd": "apps/rpg-tools"
      }
    }
  },
  "tags": ["type:app", "framework:nuxt"]
}
