{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ESNext",
    "lib": [
      "ES2023",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@rpg-tools/features/rpg-map-generator/*": [
        "libs/features/vue/rpg-map-generator/*"
      ],
      "@rpg-tools/features/rpg-world-generator/*": [
        "libs/features/vue/rpg-world-generator/*"
      ],
      "@rpg-tools/shared/map-generator/*": [
        "libs/shared/map-generator/*"
      ],
      "@rpg-tools/shared/world-generator/*": [
        "libs/shared/world-generator/*"
      ],
      "@shared/features/card-preview/*": [
        "libs/features/vue/card-preview/*"
      ],
      "@shared/features/card-print/*": [
        "libs/features/vue/card-print/*"
      ],
      "@shared/features/card-edit/*": [
        "libs/features/vue/card-edit/*"
      ],
      "@shared/features/card-list/*": [
        "libs/features/vue/card-list/*"
      ],
      "@shared/features/card-delete/*": [
        "libs/features/vue/card-delete/*"
      ],
      "@shared/entities/card": [
        "libs/entities/vue/card/index.ts"
      ],
      "@shared/entities/card/*": [
        "libs/entities/vue/card/*"
      ],
      "@shared/widgets/card-grid/*": [
        "libs/widgets/vue/card-grid/*"
      ],
      "@shared/lib/gddb": [
        "libs/shared/gddb/index.ts"
      ],
      "@shared/stores/*": [
        "libs/stores/vue/*"
      ],
      "@shared/types/*": [
        "libs/shared/types/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
